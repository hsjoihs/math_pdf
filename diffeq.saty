|) '<
  +section{}<
    +math(${
      \frac{dy}{dx} = x + y
    });
    +math(${
      e^{-x}\paren{\frac{dy}{dx} -y} = xe^{-x} 
    });
    +math(${
      \frac{d}{dx}\paren{ ye^{-x} } = xe^{-x}
    });
    +math(${
      ye^{-x}= \int xe^{-x} dx = -e^{-x} \paren{x + 1} + C
    });
    +math(${
      y=  - \paren{x + 1} + Ce^{x}
    });
  >
  +section{}<
    +math(${
      \frac{d^2}{dt^2}\app{\sin}{\omega t + \theta _0} = -\omega^2\app{\sin}{\omega t + \theta_0}
    });
  >
